# This is Git's per-user configuration file.
[user]
  name = okamu
  email = shogo@okamu.ro

[alias]
  graph =  !git log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative | less
  gh =  !git log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative | less
  hg =  !git log --graph --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative | less
  st = status
  cm = commit
  stt = status -uno
  difff = diff --word-diff
  co = checkout
  df = !git diff | less

[diff]
  color = true
[core]
  excludesFile = /Users/okamu/.gitignore_global
